<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#212424" />
            <stroke
                android:width="2dp"
                android:color="#00BCD4" />
            <corners android:radius="6dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#212424" />
            <stroke
                android:width="1dp"
                android:color="#555555" /> <!-- neutral gray border -->
            <corners android:radius="6dp" />
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

</selector>
